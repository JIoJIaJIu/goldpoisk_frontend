block('g-range')(
    js()(true),
    content()(function () {
        var ctx = this.ctx;
        return [
            {
                elem: 'left',
                content: [
                    '<',
                    {
                        tag: 'span'
                    }
                ]
            }, {
                elem: 'content',
                content: [
                    {
                        elem: 'ticks',
                        attrs: { style: 'width: ' + ctx.width + 'px;' },
                        content: [
                            ctx.ticks.map(function (tick) {
                                return {
                                    elem: 'tick',
                                    attrs: { style: 'left: ' + (tick * 100 / ctx.max) * ctx.width / 100 + 'px;'},
                                    content: [
                                        tick,
                                        {
                                            tag: 'span'
                                        }
                                    ]
                                }
                            }),
                            {
                                elem: 'handlebar',
                                content: {
                                    elem: 'fill',
                                    content: [
                                        {
                                            elem: 'thumb',
                                            mods: { 'right': true }
                                        }, {
                                            elem: 'thumb',
                                            mods: { 'left': true }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ]
            }, {
                elem: 'right',
                content: [
                    '>',
                    {
                        tag: 'span'
                    }
                ]
            }
        ]
    })
)
block('g-input')(
    tag()('span'),
    content()(function () {
        return {
            elem: 'control',
            tag: 'input',
            attrs: {
                type: 'text',
                placeholder: this.ctx.value
            }
        }
    }),
    mod('type', 'search')(
        tag()('span'),
        content()(function () {
            return [{
                elem: 'control',
                tag: 'input',
                attrs: {
                    type: 'search',
                    placeholder: this.ctx.value
                }
            }, {
                elem: 'icon',
                tag: 'span'
            }]
        })
    )
)
 block('g-available-in-stores')(
    content()(function() {
        return [
            this.ctx.content.map(function(store) {
                    return [
                    {
                        block: 'g-item-buy-in-shop',
                        shop: store.name,
                        price: store.price
                    }
                ];
            }),
            {
                block: 'clear'
            }
        ]
    })
)